@model List<MVC_CRUD.Models.Entities.Concrete.Product>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">Product List</h4>
                </div>
                <div class="box-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Unit Price</th>
                                <th>Unit In Stock</th>
                                <th>Category Name</th>
                                <th>Status</th>
                                <th>Create Date</th>
                                <th>Update Date</th>
                                <th>Delete Date</th>
                                <th>Update</th>
                                <th>Detail</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td>@product.Name</td>
                                    <td>@product.Description</td>
                                    <td>@product.UnitPrice</td>
                                    <td>@product.UnitInStock</td>
                                    <td>@product.Category.Name</td>
                                    <td>@product.Status</td>
                                    <td>@product.CreateDate</td>
                                    <td>@product.UpdateDate</td>
                                    <td>
                                        <a href="/Product/Update/@product.Id" class="btn btn-warning btn-sm">Update</a>
                                    </td>
                                    <td>
                                        <a href="/Product/Detail/@product.Id" class="btn btn-info btn-sm">Details</a>
                                    </td>
                                    <td>
                                        <a href="/Product/Delete/@product.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a href="/Product/Create" class="btn btn-primary btn-block">Create New One</a>
                </div>
            </div>
        </div>
    </div>
</div>
